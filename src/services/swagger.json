{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "GG TODO Backend API",
    "description": "RESTful API for GG TODO - A personal task management application. Built with Node.js, Express, MongoDB, and Firebase Authentication.",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "contact": {
      "name": "GG TODO Support",
      "email": "support@ggtodo.com"
    }
  },
  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic",
        "description": "Basic authentication required for all API routes"
      },
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "JWT Bearer token for authenticated routes"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "User's unique identifier"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email address"
          },
          "name": {
            "type": "string",
            "description": "User's display name"
          },
          "role": {
            "type": "integer",
            "enum": [1, 2],
            "description": "User role: 1 = Admin, 2 = Regular User"
          },
          "avatar": {
            "type": "string",
            "format": "uri",
            "description": "URL to user's avatar image"
          },
          "status": {
            "type": "boolean",
            "description": "User account status"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Todo": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "Todo's unique identifier"
          },
          "userId": {
            "type": "string",
            "description": "Owner user's ID"
          },
          "title": {
            "type": "string",
            "maxLength": 200,
            "description": "Todo title"
          },
          "description": {
            "type": "string",
            "minLength": 5,
            "description": "Todo description"
          },
          "priority": {
            "type": "integer",
            "enum": [1, 2, 3, 4],
            "description": "Priority level: 1=Low, 2=Medium, 3=High, 4=Urgent"
          },
          "status": {
            "type": "integer",
            "enum": [1, 2, 3, 4],
            "description": "Status: 1=Pending, 2=In Progress, 3=Completed, 4=Cancelled"
          },
          "labels": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of label strings"
          },
          "dueDate": {
            "type": "string",
            "format": "date-time",
            "description": "Due date for the todo"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "object"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "error": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string"
              },
              "code": {
                "type": "integer"
              }
            }
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "http://localhost:4200",
      "description": "Local Development"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Authentication endpoints for user registration, login, and logout"
    },
    {
      "name": "User",
      "description": "User management endpoints"
    },
    {
      "name": "Todo",
      "description": "Task/Todo management endpoints"
    }
  ],
  "paths": {
    "/api/v1/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register a new user",
        "description": "Create a new user account with email and password",
        "security": [{ "basicAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password", "name"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "user@example.com"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8,
                    "example": "securepassword123"
                  },
                  "name": {
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 50,
                    "example": "John Doe"
                  },
                  "role": {
                    "type": "integer",
                    "enum": [1, 2],
                    "description": "1 = Admin, 2 = User",
                    "example": 2
                  },
                  "avatar": {
                    "type": "string",
                    "format": "uri",
                    "example": "https://example.com/avatar.jpg"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User registered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/SuccessResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "object",
                          "properties": {
                            "user": { "$ref": "#/components/schemas/User" },
                            "accessToken": { "type": "string" }
                          }
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "409": {
            "description": "Email already exists"
          }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login with email and password",
        "description": "Authenticate user with email and password credentials",
        "security": [{ "basicAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "user@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "securepassword123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/SuccessResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "object",
                          "properties": {
                            "user": { "$ref": "#/components/schemas/User" },
                            "accessToken": { "type": "string" }
                          }
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/api/v1/auth/social": {
      "post": {
        "tags": ["Auth"],
        "summary": "Social/Google login",
        "description": "Authenticate using Firebase token (Google Sign-In)",
        "security": [{ "basicAuth": [] }],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "description": "Firebase ID token",
            "schema": {
              "type": "string",
              "example": "Bearer firebase-id-token"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Social login successful",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/SuccessResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "object",
                          "properties": {
                            "user": { "$ref": "#/components/schemas/User" },
                            "accessToken": { "type": "string" }
                          }
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Invalid Firebase token"
          }
        }
      }
    },
    "/api/v1/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Logout user",
        "description": "Invalidate user's access token",
        "security": [{ "basicAuth": [] }, { "BearerAuth": [] }],
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "required": true,
            "description": "User's JWT access token",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Logout successful",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SuccessResponse" }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/v1/user": {
      "get": {
        "tags": ["User"],
        "summary": "List all users (Admin only)",
        "description": "Get a paginated list of users. Requires admin role.",
        "security": [{ "basicAuth": [] }, { "BearerAuth": [] }],
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 20
            }
          },
          {
            "name": "skip",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            }
          },
          {
            "name": "status",
            "in": "query",
            "schema": { "type": "boolean" }
          },
          {
            "name": "role",
            "in": "query",
            "schema": {
              "type": "integer",
              "enum": [1, 2]
            }
          },
          {
            "name": "name",
            "in": "query",
            "schema": { "type": "string" }
          },
          {
            "name": "email",
            "in": "query",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "List of users",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/SuccessResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "object",
                          "properties": {
                            "users": {
                              "type": "array",
                              "items": { "$ref": "#/components/schemas/User" }
                            },
                            "total": { "type": "integer" },
                            "limit": { "type": "integer" },
                            "skip": { "type": "integer" }
                          }
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin access required"
          }
        }
      }
    },
    "/api/v1/user/profile": {
      "get": {
        "tags": ["User"],
        "summary": "Get current user profile",
        "description": "Get the authenticated user's profile information",
        "security": [{ "basicAuth": [] }, { "BearerAuth": [] }],
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "User profile",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/SuccessResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": { "$ref": "#/components/schemas/User" }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "put": {
        "tags": ["User"],
        "summary": "Update current user profile",
        "description": "Update the authenticated user's profile",
        "security": [{ "basicAuth": [] }, { "BearerAuth": [] }],
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "minProperties": 1,
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 50
                  },
                  "avatar": {
                    "type": "string",
                    "format": "uri"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Profile updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/SuccessResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": { "$ref": "#/components/schemas/User" }
                      }
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Validation error"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/v1/user/create": {
      "post": {
        "tags": ["User"],
        "summary": "Create a new user (Admin only)",
        "description": "Admin endpoint to create a new user",
        "security": [{ "basicAuth": [] }, { "BearerAuth": [] }],
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password", "name"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8
                  },
                  "name": {
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 50
                  },
                  "role": {
                    "type": "integer",
                    "enum": [1, 2]
                  },
                  "avatar": {
                    "type": "string",
                    "format": "uri"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User created successfully"
          },
          "400": {
            "description": "Validation error"
          },
          "403": {
            "description": "Forbidden - Admin access required"
          },
          "409": {
            "description": "Email already exists"
          }
        }
      }
    },
    "/api/v1/user/{userId}": {
      "put": {
        "tags": ["User"],
        "summary": "Update user by ID (Admin only)",
        "description": "Admin endpoint to update any user by their ID",
        "security": [{ "basicAuth": [] }, { "BearerAuth": [] }],
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "description": "User's MongoDB ObjectId",
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "minProperties": 1,
                "properties": {
                  "name": { "type": "string" },
                  "avatar": { "type": "string" },
                  "status": { "type": "boolean" },
                  "isDeleted": { "type": "boolean" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User updated successfully"
          },
          "400": {
            "description": "Validation error"
          },
          "403": {
            "description": "Forbidden - Admin access required"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/api/v1/todo": {
      "get": {
        "tags": ["Todo"],
        "summary": "List todos",
        "description": "Get a list of todos for the authenticated user",
        "security": [{ "basicAuth": [] }, { "BearerAuth": [] }],
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "List of todos",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/SuccessResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": { "$ref": "#/components/schemas/Todo" }
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "post": {
        "tags": ["Todo"],
        "summary": "Create a new todo",
        "description": "Create a new todo item for the authenticated user",
        "security": [{ "basicAuth": [] }, { "BearerAuth": [] }],
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title", "description", "dueDate"],
                "properties": {
                  "title": {
                    "type": "string",
                    "maxLength": 200,
                    "example": "Complete project documentation"
                  },
                  "description": {
                    "type": "string",
                    "minLength": 5,
                    "example": "Write comprehensive documentation for the API endpoints"
                  },
                  "priority": {
                    "type": "integer",
                    "enum": [1, 2, 3, 4],
                    "description": "1=Low, 2=Medium, 3=High, 4=Urgent",
                    "example": 2
                  },
                  "labels": {
                    "type": "array",
                    "items": { "type": "string" },
                    "example": ["work", "documentation"]
                  },
                  "dueDate": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2024-12-31T23:59:59Z"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Todo created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/SuccessResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": { "$ref": "#/components/schemas/Todo" }
                      }
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Validation error"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/v1/todo/stats": {
      "get": {
        "tags": ["Todo"],
        "summary": "Get todo statistics",
        "description": "Get statistics about the user's todos (counts by status, priority, etc.)",
        "security": [{ "basicAuth": [] }, { "BearerAuth": [] }],
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Todo statistics",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/SuccessResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "object",
                          "properties": {
                            "stats": {
                              "type": "object",
                              "properties": {
                                "total": { "type": "integer" },
                                "completed": { "type": "integer" },
                                "pending": { "type": "integer" },
                                "overdue": { "type": "integer" }
                              }
                            }
                          }
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/v1/todo/calendar": {
      "get": {
        "tags": ["Todo"],
        "summary": "Get calendar view data",
        "description": "Get todos organized by date for calendar view",
        "security": [{ "basicAuth": [] }, { "BearerAuth": [] }],
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Calendar data",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/SuccessResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "object",
                          "description": "Todos grouped by date"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/v1/todo/{todoId}": {
      "put": {
        "tags": ["Todo"],
        "summary": "Update a todo",
        "description": "Update an existing todo by its ID",
        "security": [{ "basicAuth": [] }, { "BearerAuth": [] }],
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "todoId",
            "in": "path",
            "required": true,
            "description": "Todo's MongoDB ObjectId",
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "minProperties": 1,
                "properties": {
                  "title": {
                    "type": "string",
                    "maxLength": 200
                  },
                  "description": {
                    "type": "string",
                    "minLength": 5
                  },
                  "priority": {
                    "type": "integer",
                    "enum": [1, 2, 3, 4]
                  },
                  "status": {
                    "type": "integer",
                    "enum": [1, 2, 3, 4],
                    "description": "1=Pending, 2=In Progress, 3=Completed, 4=Cancelled"
                  },
                  "labels": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "dueDate": {
                    "type": "string",
                    "format": "date-time"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Todo updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/SuccessResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": { "$ref": "#/components/schemas/Todo" }
                      }
                    }
                  ]
                }
